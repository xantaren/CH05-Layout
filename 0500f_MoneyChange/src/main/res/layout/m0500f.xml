<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Silver"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    tools:context=".M0500">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/m0500_t001"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@color/Teal"
            android:text="@string/m0500_t001"
            android:textColor="@color/Navy"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/m0500_e001"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ems="10"
            android:gravity="end"
            android:hint="@string/hint"
            android:inputType="numberDecimal"
            android:textSize="24sp" />
    </TableRow>

    <Button
        android:id="@+id/m0500_b001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sm10dp"
        android:backgroundTint="@color/Yellow"
        android:backgroundTintMode="src_over"
        android:text="@string/m0500_b001"
        android:textColor="@color/Red"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sm10dp">

        <TextView
            android:id="@+id/m0500_t002"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@color/Teal"
            android:text="@string/m0500_t002"
            android:textColor="@color/Navy"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/m0500_t003"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ems="10"
            android:gravity="end"
            android:text="@string/m0500_t003"
            android:textColor="@color/Navy"
            android:textSize="24sp" />

    </TableRow>

    <TextView
        android:id="@+id/myName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:gravity="end"
        android:text="@string/myname"
        android:textColor="@color/Navy"
        android:textSize="24sp"
        android:textStyle="bold" />
</LinearLayout>